@model BloodDonationApp.Models.InputModels.PostInputModel
<div class="row jumbotron mx-auto">
    <h2 class="text-center mx-auto">Create</h2>
    <div class="col-md-12 mx-auto mx-auto">
        <form asp-controller="Post" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-lg-12 row">
                <div class="col-lg-5 mx-auto">
                    <div class="md-form">
                        <input asp-for="Title" type="text" id="Title" class="form-control" value="@Model.Title">
                        <label asp-for="Title" for="Town"></label>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 row">
                <div class="col-lg-5 mx-auto">
                    <div class="md-form mb-2">
                        <i class="fas fa-pencil-alt prefix"></i>
                        <textarea asp-for="Description" id="form10" class="md-textarea form-control" rows="10">
                            @Model.Description
                        </textarea>
                        <label for="form10">Description</label>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <input type="submit" class="btn btn-outline-danger mb-3 z-depth-0 btn-rounded mx-auto waves-effect" value="Edit" />
            </div>
        </form>
    </div>
</div>