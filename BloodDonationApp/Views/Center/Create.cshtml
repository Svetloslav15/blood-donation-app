@model BloodDonationApp.Models.InputModels.CenterInputModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="row jumbotron mx-auto">
        <h1 class="text-center mx-auto">Create</h1>
        <div class="col-md-12 mx-auto mx-auto">
            <form asp-controller="Center" asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-lg-12 row">
                    <div class="col-lg-5 mx-auto">
                        <div class="md-form">
                            <input asp-for="Town" type="text" id="Town" class="form-control">
                            <label asp-for="Town" for="Town"></label>
                            <span asp-validation-for="Town" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-5 mx-auto">
                        <div class="md-form">
                            <input asp-for="Address" type="text" id="Address" class="form-control">
                            <label asp-for="Address" for="Address"></label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 row">
                    <div class="col-lg-5 mx-auto">
                        <div class="md-form">
                            <input asp-for="PhoneNumber" type="text" id="PhoneNumber" class="form-control">
                            <label asp-for="PhoneNumber" for="PhoneNumber"></label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-5 mx-auto">
                        <div class="md-form">
                            <input asp-for="Email" type="text" id="Email" class="form-control">
                            <label asp-for="Email" for="Email"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <input type="submit" class="btn btn-outline-danger mb-3 z-depth-0 btn-rounded mx-auto waves-effect" value="Create" />
                </div>
            </form>
        </div>
    </div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
