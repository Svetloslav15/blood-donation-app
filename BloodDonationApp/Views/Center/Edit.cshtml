@model BloodDonationApp.Models.InputModels.CenterInputModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row jumbotron mx-auto">
        <h2 class="text-center mx-auto">Edit</h2>
        <div class="col-md-12 mx-auto mx-auto">
            <form asp-controller="Center" asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-lg-12 row">
                    <input asp-for="Id" type="hidden"  value="@Model.Id">
                    <div class="col-lg-5 mx-auto">
                        <div class="md-form">
                            <input asp-for="Name" type="text" id="Name" class="form-control" value="@Model.Name">
                            <label asp-for="Name" for="Name"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 row">
                    <div class="col-lg-5 mx-auto">
                        <div class="md-form">
                            <input asp-for="Town" type="text" id="Town" class="form-control" value="@Model.Town">
                            <label asp-for="Town" for="Town"></label>
                            <span asp-validation-for="Town" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-5 mx-auto">
                        <div class="md-form">
                            <input asp-for="Address" type="text" id="Address" class="form-control" value="@Model.Address">
                            <label asp-for="Address" for="Address"></label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 row">
                    <div class="col-lg-5 mx-auto">
                        <div class="md-form">
                            <input asp-for="PhoneNumber" type="text" id="PhoneNumber" class="form-control" value="@Model.PhoneNumber">
                            <label asp-for="PhoneNumber" for="PhoneNumber"></label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-5 mx-auto">
                        <div class="md-form">
                            <input asp-for="Email" type="text" id="Email" class="form-control" value="@Model.Email">
                            <label asp-for="Email" for="Email"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <input type="submit" class="btn btn-outline-danger mb-3 z-depth-0 btn-rounded mx-auto waves-effect" value="Edit" />
                </div>
            </form>
        </div>
    </div>