@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="mt-5 border-form bg-g pt-4 p-2">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="md-form">
                        <input asp-for="Input.Email" type="text" id="email" class="form-control">
                        <label asp-for="Input.Email" for="email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="md-form">
                        <input asp-for="Input.Password" type="password" id="pass" class="form-control">
                        <label asp-for="Input.Password" for="pass"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-around">
                        <div>
                            <!-- Remember me -->
                            <div class="form-check">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe"
                                           class="form-check-label"
                                           for="materialLoginFormRemember" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div>
                            Not a member?
                            <a asp-page="./Register">Register</a>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-danger z-depth-0 mb-3 btn-rounded mx-auto waves-effect">Login</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
